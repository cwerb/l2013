(function(){
    <% if params[:page] == '1' %>
    $(".main-content").html(' ');
    <% if params[:order] == 'time' %>
            $($('.order-select > a')[0]).addClass('selected');
            $($('.order-select > a')[1]).removeClass('selected');
        <% else %>
            $($('.order-select > a')[1]).addClass('selected');
            $($('.order-select > a')[0]).removeClass('selected');
    <% end %>
    $(".main-content").html('');
    <% else %>
    $(".preloader").remove();
    <% end %>
    $(".main-content").append('<%= escape_javascript render 'content' %>');
})();