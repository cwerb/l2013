  <div class="tasks-carousel-holder">
    <div class="tasks-carousel">
      <div class="tasks-carousel-content">
        <div class="task">
          <%= image_tag 'sample-task-pic.png' %>
        </div>
        <div class="task">
          <%= image_tag 'sample-task-pic.png' %>
        </div>
        <div class="task">
          <%= image_tag 'sample-task-pic.png' %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="tasks-bottom"></div>

<div class="images">
  <div class="order">
    <div class="order-select">
      <%= link_to raw('<p>По дате</p>'), {order: 'time', page: 1}, remote: true, class: 'selected' %>
